[Unit]
Description=EV service
After=network.target

[Service]
Type=simple
WorkingDirectory=/root/ev-virtualizer/latest
ExecStart=/root/ev-virtualizer/latest/ev-virtualizer --config /root/ev-virtualizer/latest/ev-virtualizer.config
Restart=on-failure
TimeoutStopSec=15

[Install]
WantedBy=multi-user.target
